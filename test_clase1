package aed;

class Funciones {
    int cuadrado(int x) {
        int res= x*x;
        return res;
    }

    double distancia(double x, double y) {
        double res=Math.sqrt(x*x+y*y);
        return res;
    }

    boolean esPar(int n) {
        return  n % 2 ==0;
    }

    boolean esBisiesto(int n) {
    boolean res = (n%4==0  && n % 100 !=0 ) || (400 % n == 0);
        return (res) ;
    }

    int factorialIterativo(int n) {
        int res=1;
        for (int i=1;i<n+1;i++){
            res*=i;
        }
        return res;
    }

    int factorialRecursivo(int n) {
        int res=1;
        if (n==0){
            return 1;
        } else{
            res =n*factorialRecursivo(n-1);
        }

        
        return res;
    }

    boolean esPrimo(int n) {
        boolean res=false;
        int i=2;
        while (n>1 &&i<n  && n % i !=0) {
            res=true;
            i++;
        } 
        return res;
        
    }

    int sumatoria(int[] numeros) {
        int res= 0;
        for (int n:numeros){
            res+=n;
        }
        return res;
    }

    int busqueda(int[] numeros, int buscado) {
        for (int i=0;i<numeros.length;i++){
            if (buscado == numeros[i]){
                return i;
            }
        }
        return 0;
    }

    boolean tienePrimo(int[] numeros) {
        boolean res=false;
        for (int n :numeros){
            if (esPrimo(n)){
                res=true;
                return res;
            }
        }
        return false;
    }

    boolean todosPares(int[] numeros) {
        boolean res=false;

        for (int n:numeros){
            if (esPar(n)){
                res=true;
            }else {
                return false;
            }

        }
        return res;
    }

    boolean esPrefijo(String s1, String s2) {
        boolean res=true;
        int i=0;
        if (s1.length()<=s2.length()){
            while (i<s1.length()){
                if (s1.charAt(i)!=s2.charAt(i)) {
                    res=false;
                }
                i++;
            }
            return res;
        }
        return false;
    }

    boolean esSufijo(String s1, String s2) {
            if (s1.length()<=s2.length()){
                while (condition) {
                    
                }
            }

        return false;
    }
}

